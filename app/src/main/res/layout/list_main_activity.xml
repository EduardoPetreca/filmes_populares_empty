<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#232222">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="2dp"
        card_view:contentPadding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_film"
                android:layout_width="100dp"
                android:layout_height="120dp"
                card_view:srcCompat="@drawable/empty_image" />

            <TextView
                android:id="@+id/txt_tittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/image_film"
                android:layout_toRightOf="@+id/image_film"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/txt_name"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_tittle"
                android:layout_margin="5dp"
                android:layout_toEndOf="@+id/image_film"
                android:layout_toRightOf="@+id/image_film"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/txt_duration"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_time"
                android:layout_margin="5dp"
                android:layout_toEndOf="@+id/image_film"
                android:layout_toRightOf="@+id/image_film"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/txt_rating"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>